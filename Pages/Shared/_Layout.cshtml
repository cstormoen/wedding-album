<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Christopher & Aenne</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    :root {
      --bs-border-radius: 10px;
    }

    .navbar {
      --bs-navbar-color: #fff;
      --bs-navbar-hover-color: #70a0af;
      --bs-nav-link-font-size: 20px;
      --bs-nav-link-font-weight: 400;
      --bs-navbar-nav-link-padding-x: 20px;
    }

    body {
      background-color: #f4e8c1;
      font-family: "Open Sans", sans-serif;
    }

    .navbar {
      background-color: #331e38;
    }

    nav ul li a {
      text-transform: uppercase;
    }

    .logo {
      font-size: 20px;
      color: #f4e8c1;
    }

    #intro p {
      line-height: 2rem;
    }

    footer {
      padding: 35px 0;
      background-color: #331e38;

      p {
        color: #fff;
      }

      a {
        background-color: transparent;
        color: #fff;
        font-size: 2.5rem;
        margin: 5rem auto;

        &:hover,
        &:focus {
          color: #fff;
        }
      }

      span.fa-heart {
        color: #ff415c;
        margin: 0 2px;
      }
    }

    .pulse2 {
      animation-name: pulse2;
      animation-duration: 1s;
      animation-iteration-count: infinite;
      animation-timing-function: linear;
    }

    @@keyframes pulse2 {
      0% {
        transform: scale(1.1);
      }

      50% {
        transform: scale(0.8);
      }

      100% {
        transform: scale(1);
      }
    }

    #upload {
      background-color: #a0c1b9;
    }

    h3 {
      color: #3d4351;
      font-size: 22px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: .1rem;
      line-height: 3.5rem;
    }
  </style>
</head>

<body>
  <header>
    <nav class="navbar">
      <div class="container">
        <div class="logo mx-auto">
          C
          <span class="fa fa-heart"></span>
          A
        </div>
      </div>
    </nav>
  </header>

  <main role="main" class="pb-3">
    @RenderBody()
  </main>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 text-center content">
          <a href="#top"><i class="fa fa-angle-up"></i></a></span>
          <p>Created by Chris with lots of <span class="fa fa-heart pulse2"></span> for Aenne</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>